<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sh.vhr.mapper.PositionMapper">

    <resultMap id="BaseResultMap" type="com.sh.vhr.model.Position">
        <result column="id" property="id" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="createDate" property="createDate" jdbcType="TIMESTAMP"/>
        <result column="enabled" property="enabled" jdbcType="BIT"/>
    </resultMap>

    <select id="getAllPositions" resultMap="BaseResultMap">
        select * from position where enabled = 1;
    </select>
    <select id="getPositionById" resultMap="BaseResultMap">
        select * from position where id = #{id}
    </select>

    <insert id="addPosition" useGeneratedKeys="true" parameterType="com.sh.vhr.model.Position">
        insert into position (name, createDate, enabled) values (#{name}, #{createDate}, #{enabled})
    </insert>

    <update id="updatePosition" parameterType="com.sh.vhr.model.Position">
        update position
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="createDate != null">
                createDate = #{createDate},
            </if>
            <if test="enabled != null">
                enabled = #{enabled},
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="deletePosition" parameterType="java.lang.Integer">
        delete from position where id = #{id}
    </delete>

    <delete id="deletePositions">
        delete from position where id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>
</mapper>