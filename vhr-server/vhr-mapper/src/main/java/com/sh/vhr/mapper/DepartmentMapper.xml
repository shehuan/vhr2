<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sh.vhr.mapper.DepartmentMapper">

    <resultMap id="BaseResultMap" type="com.sh.vhr.model.Department">
        <result column="id" property="id" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="parentId" property="parentId" jdbcType="INTEGER"/>
        <result column="depPath" property="depPath" jdbcType="VARCHAR"/>
        <result column="enabled" property="enabled" jdbcType="BIT"/>
        <result column="isParent" property="isParent" jdbcType="BIT"/>
    </resultMap>

    <resultMap id="DepartmentWithChildren" type="com.sh.vhr.model.Department" extends="BaseResultMap">
        <collection property="children" ofType="com.sh.vhr.model.Department"
                    select="com.sh.vhr.mapper.DepartmentMapper.getAllDepartmentsByParentId" column="id"/>
    </resultMap>

    <insert id="addDepartment" useGeneratedKeys="true" keyProperty="id" parameterType="com.sh.vhr.model.Department">
        insert into department (name, parentId, enabled, isParent) values (#{name}, #{parentId}, #{enabled}, false)
    </insert>

    <update id="updateDepartmentById">
        update department
        <set>
            <if test="name != null and name !=''">
                name = #{name},
            </if>
            <if test="depPath != null and depPath !=''">
                depPath = #{depPath},
            </if>
            <if test="enabled != null">
                enabled = #{enabled},
            </if>
            <if test="isParent != null">
                isParent = #{isParent},
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteDepartmentById">
        delete from department where id = #{id} and isParent = false
    </delete>

    <select id="getAllDepartments" resultMap="BaseResultMap">
        select * from department
    </select>

    <select id="getAllDepartmentsByParentId" resultMap="DepartmentWithChildren" parameterType="java.lang.Integer">
        select * from department where parentId = #{parentId}
    </select>

    <select id="getParentDepartment" resultType="com.sh.vhr.model.Department">
        select * from department where id = #{id}
    </select>

    <select id="getChildrenDepartmentCount" resultType="java.lang.Integer">
        select count(*) from department where parentId = #{parentId}
    </select>
</mapper>