<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sh.vhr.mapper.NationMapper">

    <resultMap id="BaseResultMap" type="com.sh.vhr.model.Nation">
            <result column="id" property="id" jdbcType="INTEGER" />
            <result column="name" property="name" jdbcType="VARCHAR" />
    </resultMap>

    <select id="getAllNations" resultMap="BaseResultMap">
        select * from nation;
    </select>
    <select id="getNationById" resultMap="BaseResultMap">
        select * from nation where id = #{id}
    </select>
</mapper>